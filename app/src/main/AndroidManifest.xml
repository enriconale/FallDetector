<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unipd.dei.esp1415.thetrumannshow.FallDetector" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fall_detector_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".RunningSessionService" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FallDetailsActivity"
            android:label="@string/title_activity_fall_details" >
        </activity>
        <activity
            android:name=".SessionDetailsActivity"
            android:label="@string/title_activity_session_details"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".RunningSessionActivity"
            android:label="@string/title_activity_running_session"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".MainActivity" />
        </activity>
    </application>

</manifest>
