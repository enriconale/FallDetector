<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unipd.dei.esp1415.thetrumannshow.FallDetector.SessionDetailsActivity">

   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/session_icon"
         />

    <TextView
        android:id="@+id/session_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/session_icon"
        android:layout_toEndOf="@id/session_icon"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_layout"
        android:textSize="24sp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/session_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_time"
        android:textSize="24sp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/falls_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_duration"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:text="@string/falls_list"/>

    <RelativeLayout
        android:id="@+id/falls_list_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/falls_header">

    </RelativeLayout>

    </RelativeLayout>
</ScrollView>